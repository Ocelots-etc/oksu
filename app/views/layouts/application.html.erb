<!DOCTYPE html>
<html>
  <head>
    <br />
    <br />
    <br />

<% if current_user %>
    <% current_user.errors.full_messages.any? %>
  <% current_user.errors.full_messages.each do |error_message| %>
    <%= error_message if current_user.errors.full_messages.first == error_message %> <br />
  <% end %>
<% end %>

<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>



    <h1>Our Sisters' Keepers</h1>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csp_meta_tag %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div id="Hello_user">
    <% if logged_in_user? %>
    <span>Hi, <%= current_user.name %>!
    <%= button_to "Logout", logout_path, method: :POST %>
     </span>
  <% elsif logged_in_admin? %>
     <span>Hi, <%= current_admin.name %>!
    <%= button_to "Logout", logout_path, method: :POST %>
     </span>
  <% else %>
    <%= button_to "Sign Up", signup_path, method: :get  %>
    <%= button_to "Login", login_path, method: :get  %>   

  <% end %>
  </div>




      
        <%= yield %>
<br />

<br />



    </body>
</html>
